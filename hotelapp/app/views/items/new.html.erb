<%= render "shared/header" %>

<div class="basic-registration-backimage">
  <div class="basic-content">
  <%= render "shared/basic-header" %>

    <div class="item-registration">
      <%= form_with model: @item, class:"item-form", local: true do |f| %>
        
        <p class="item-form-title">新規アイテム登録</p>

        <%= render 'shared/error_messages', model: f.object %>

        <div class='name-form'>
          <p class="name-title">名前</p>
          <%= f.text_area :name, class:"item-name", placeholder:"", maxlength:"40" %>
        </div>

        <div class="count-form">
          <p class="count-title">数量</p>
          <%= f.number_field :count, class:"item-count", placeholder:"" %>
        </div>

        <div class="category-form">
          <p class="category-title">カテゴリー</p>
          <%= f.collection_select(:category_id, Category.all, :id, :name, {}, {class:"item-category"}) %>
        </div>

        <div class="place-form">
          <p class="place-title">場所</p>
          <%= f.collection_select(:place_id, Place.all, :id, :name, {}, {class:"item-place"}) %>
        </div>

        <div class='detail-form'>
          <p class="detail-title">詳細</p>
          <%= f.text_area :detail, class:"item-detail", placeholder:"アイテムの詳細" %>
        </div>

        <div class='image-form'>
          <p class="image-title">写真</p>
          <%= f.file_field :image, class:"item-image" %>
        </div>
        
        <div class="basic-submit">
          <%= f.submit "登録する", class:"register-btn" %>
        </div>
        
      <% end %>
      </div>
      <%= render "shared/footer" %>

  </div>