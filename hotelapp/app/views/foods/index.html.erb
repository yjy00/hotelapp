<%= render "shared/header" %>
<div class="main-page-backimage">
  <div class="basic-content">

  <%= render "shared/basic-header" %>

<ul class="item-list">
    <% @items.each do |item| %>
        <li class="item">
          <%= link_to edit_item_path(item), class: 'edit' do %>
          <div class="name">
            <p class="name-title">名前</p>
            <%= item.name %>
          </div>
          <div class="count">
            <p class="count-title">数量</p>
            <%= item.count %>
          </div>
          <% end %>
        </li>
    <% end %>
      </ul>
    </div>
    <%= render "shared/footer" %>

</div>