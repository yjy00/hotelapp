<%= render "shared/header" %>

  <div class="basic-menu-list">
    <div>
      <p class="basic-menu-btn menu-sentence" >基本メニュー</p>
    </div>
    <div>
      <%= link_to 'フード一覧', foods_path, class: "basic-menu-btn" %>
    </div>
    <div>
      <%= link_to 'ドリンク一覧', beverages_path, class: "basic-menu-btn" %>
    </div>
    <div>
      <%= link_to '備品一覧', equipments_path, class: "basic-menu-btn" %>
    </div>
    <div>
      <%= link_to '新規登録', new_item_path, class: "basic-menu-btn" %>
    </div>
    <div>
      <%= link_to 'キッチン発注リスト', kitchen_orders_path %>
    </div>
  </div>

  <div>

    <% @items.each do |item| %>
      <ul class='item'>
        <li>
          <%= link_to edit_item_path(item), class: 'edit' do %>
          <div class="name">
            <p class="name-title">名前</p>
              <%= item.name %>
          </div>
          <div class="count">
            <p class="count-title">数量</p>
            <%= item.count %>
          </div>
          <% end %>
        </li>
      </ul>
    <% end %>