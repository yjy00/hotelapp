<%= render "shared/header" %>

<div class="container">
<div class="daily-handover-container-inner">

<%= form_with model: @daily_handover, class:"", local: true do |f| %>

    <%= render 'shared/error_messages', model: f.object %>

<div class="form-row">
    <div class="col input-group">
      <%= f.number_field :month, class:"form-control", placeholder:"月" %>
      <div class="input-group-append">
        <span class="input-group-text">月</span>
      </div>
    </div>
    <div class="col input-group">
      <%= f.number_field :date, class:"form-control", placeholder:"日" %>
      <div class="input-group-append">
        <span class="input-group-text">日</span>
      </div>
    </div>
    </div>
    <div class="form-group">
    <label>今日のリマーク</label>
      <%= f.text_area :daily_remark, class:"form-control form-control-lg", placeholder:"アイテムの詳細" %>
    </div>
    <div class="form-group">
    <label>早番へ</label>
      <%= f.text_area :to_morning, class:"form-control form-control-lg", placeholder:"アイテムの詳細" %>
    </div>
    <div class="form-group">
    <label>遅番へ</label>
      <%= f.text_area :to_evening, class:"form-control form-control-lg", placeholder:"アイテムの詳細" %>
    </div>
    <div class="form-group">
    <label>明日へ</label>
      <%= f.text_area :for_tomorrow, class:"form-control form-control-lg", placeholder:"アイテムの詳細" %>
    </div>
      <%= f.submit "登録する", class:"btn btn-block" %>
 
<% end %>
</div>
    <%= render "shared/footer" %>
