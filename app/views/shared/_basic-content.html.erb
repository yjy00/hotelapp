<ul class="item-list">
  <div class="card-columns">
    <% @items.each do |item| %>
      <li class="item">
        <%= link_to edit_item_path(item), class:'card' do %>
          <div class="card-body">
            <%= item.name %>
            <%= item.count %>
          </div>
        <% end %>
      </li>
    <% end %>
  </div>
</ul>