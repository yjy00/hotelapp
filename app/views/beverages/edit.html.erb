<%= render "shared/header" %>

<div class="item-registration">
  <%= form_with model: @beverage, class:"item-form", local: true do |f| %>

    <%= render 'shared/error_messages', model: f.object %>

    <div class="count">数量
      <%= f.collection_select(:count_id, Count.all, :id, :name, {}, {class:"count-select"}) %>
    </div>
    <div>
      <%= f.submit "登録する", class:"regregister-btnister" %>
    </div>

    <div class='name'>名前
      <%= f.text_area :name, class:"item-name", placeholder:"アイテム名", maxlength:"40" %>
    </div>
    <div class='detail'>詳細
      <%= f.text_area :detail, class:"item-detail", placeholder:"アイテムの詳細" %>
    </div>
    <div class='image'>写真
      <%= f.file_field :image, id:"item-image" %>
    </div>
    <div class="place">場所
      <%= f.collection_select(:place_id, Place.all, :id, :name, {}, {class:"place-select"}) %>
    </div>
    <div>
      <%= f.submit "登録する", class:"register-btn" %>
    </div>
  <% end %>
</div>
  <div class="link-list">
    <%= link_to '詳細ページへ', beverage_path(@beverage), method: :get, class: "to-show" %>
    <%= link_to '削除', beverage_path(@beverage), method: :delete, class:'to-destroy' %>
  </div>