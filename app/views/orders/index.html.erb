<%= render "shared/header" %>

<div class="container">

    <main role="main" class="order-container-inner">

    <h4 class="title">発注リスト</h4>

<table class="table table-striped table-bordered">

<tr>
  <th>アイテム名</th>
  <th>残量</th>
</tr>

    <% @items.each do |item| %>
    <ul class="order-list">
        <li class="order-item">

        <tr>
          <%= link_to edit_item_path(item), class:'item-edit' do %>
            
            <td><%= item.name %></td>
            <td><%= item.count %></td>
                
        <% end %>

        </tr>
        </li>
      </ul>
    <% end %>

</table>

<div class="btn-wrapper">
          <%= link_to "発注する", "#", class:'btn' %>
</div>

    </div>
</div>
</div>