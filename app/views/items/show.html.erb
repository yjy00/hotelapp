<%= render "shared/header" %>

<div class="container">
<div class="item-show-container-inner">
          <h4><%= @item.name %></h4>

          

      <table class="table table-striped table-bordered">

        <tr>
          <th>画像</th>
          <td>
            <%if @item.image.present? %>
              <%= image_tag @item.image %>
            <% else %>
              <p>画像はありません。</p>
          <% end %>
          </td>
        </tr>

        <tr>
          <th>カテゴリー</th>
          <td><%= @item.category.name %></td>
        </tr>

        <tr>
          <th>提供場所</th>
          <td><%= @item.place.name %></td>
        </tr>

        <tr>
          <th>残数</th>
          <td><%= @item.count %></td>
        </tr>

        <tr>
          <th>詳細</th>
          <td><%= @item.detail %></td>
        </tr>

      </table>

      <%= link_to "修正ページへ", edit_item_path(@item), class:'btn' %>
      <%= link_to '削除', item_path(@item), method: :delete, class:'btn' %>

  </div>
</div>

    <%= render "shared/footer" %>
