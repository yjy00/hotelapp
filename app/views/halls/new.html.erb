<%= render "shared/header" %>

<div class="item-registration">
  <%= form_with model: @hall, local: true do |f| %>
    <%= render 'shared/error_messages', model: f.object %>

    <div class='image'>写真
      <%= f.file_field :images, id:"item-image" %>
    </div>
    <div class='name'>名前
      <%= f.text_area :name, class:"item-name", placeholder:"アイテム名", maxlength:"40" %>
    </div>
    <div class='detail'>詳細
      <%= f.text_area :detail, class:"item-detail", placeholder:"アイテムの詳細" %>
    </div>
    <div class='count'>数量
      <%= f.text_area :count, class:"item-count", placeholder:"数量" %>
    </div>
    <div class="register-btn">
      <%= f.submit "登録する" ,class:"register" %>
    </div>
  <% end %>

</div>


      