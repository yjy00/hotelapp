<%= render "shared/header" %>

  <div class="basic-menu-list">
    <div>
      <p class="basic-menu-btn menu-sentence" >基本メニュー</p>
    </div>
    <div>
      <%= link_to 'フード一覧', foods_path, class: "basic-menu-btn" %>
    </div>
    <div>
      <%= link_to 'ドリンク一覧', beverages_path, class: "basic-menu-btn" %>
    </div>
    <div>
      <%= link_to '備品一覧', equipments_path, class: "basic-menu-btn" %>
    </div>
    <div>
      <%= link_to 'フード登録', new_food_path, class: "basic-menu-btn" %>
    </div>
    <div>
      <%= link_to 'ドリンク登録', new_beverage_path, class: "basic-menu-btn" %>
    </div>
    <div>
      <%= link_to '備品登録', new_equipment_path, class: "basic-menu-btn" %>
    </div>
  </div>

  <div>

    <% @foods.each do |food| %>
      <ul class='item'>
        <li>
          <%= link_to edit_food_path(food), class: 'edit' do %>
          <div class="name">
            <p>名前</p>
            <%= food.name %>
          </div>
          <%= food.count.name %>
          <% end %>
        </li>
      </ul>
    <% end %>

