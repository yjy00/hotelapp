<div class="container">

<div class="signup-container-wrapper">

    <div class="signup-logo">logo</div>

    <h2 class="signup">新規登録</h2>


    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="form-group">
        <%= f.label :ホテルのお名前 %><br />
        <%= f.text_area :name, autofocus: true, autocomplete: "name", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :メールアドレス %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :パスワード %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :パスワード確認 %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :マネージャー様のお名前 %><br />
        <%= f.text_area :managers_name, autofocus: true, autocomplete: "name", class: "form-control" %>
      </div>

        <%= f.submit "新規登録", class: "btn" %>

    <% end %>

      <%= render "devise/shared/links" %>
</div>
</div>
  <%= render "shared/footer" %>