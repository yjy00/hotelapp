<div class="container">

<div class="signup-container-wrapper">

    <div class="signup-logo h2">logo</div>

    <div class="card">

    <p class="signup">新規登録</p>


    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="form-group">
        <%= f.label :ホテルのお名前, class:"signup-label" %>
        <%= f.text_area :name, autofocus: true, autocomplete: "name", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :メールアドレス, class:"signup-label" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :パスワード, class:"signup-label" %>
        <% if @minimum_password_length %>
       <P class=signup-label>（<%= @minimum_password_length %> 文字以上）</P>
        <% end %>
        <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :パスワード確認, class:"signup-label" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :マネージャー様のお名前, class:"signup-label" %>
        <%= f.text_area :managers_name, autofocus: true, autocomplete: "name", class: "form-control" %>
      </div>

        <%= f.submit "新規登録", class: "btn btn-block" %>

    <% end %>

      <%= render "devise/shared/links" %>
</div>
</div>
</div>
<%= render "shared/footer" %>