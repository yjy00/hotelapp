<div class="login-background">
  <div class="sign-in-form-wrapper">

    <div class="signup-logo">logo</div>

    <h2 class="signup">新規登録</h2>


    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :ホテルのお名前 %><br />
        <%= f.text_area :name, autofocus: true, autocomplete: "name", class: "form" %>
      </div>

      <div class="field">
        <%= f.label :メールアドレス %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form" %>
      </div>

      <div class="field">
        <%= f.label :パスワード %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", class: "form hotel-name" %>
      </div>

      <div class="field">
        <%= f.label :パスワード確認 %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form" %>
      </div>

      <div class="field">
        <%= f.label :マネージャー様のお名前 %><br />
        <%= f.text_area :managers_name, autofocus: true, autocomplete: "name", class: "form" %>
      </div>

      <div class="actions">
        <%= f.submit "新規登録", class: "signup-btn" %>
      </div>
    <% end %>

    <div class="login-render">
      <%= render "devise/shared/links" %>
    </div>
  </div>

  <%= render "shared/footer" %>

</div>

