<%= render "shared/header" %>

<div class="container">


  <%= form_with model: @menu, class:"", local: true do |f| %>

    <%= render 'shared/error_messages', model: f.object %>

    <div class='form-group'>
      <label>名前</label>
      <%= f.text_area :name, class:"form-control", placeholder:"アイテム名", maxlength:"40" %>
    </div>
    <div class="form-group">
      <label>カテゴリー</label>
      <%= f.collection_select(:category_id, Category.all, :id, :name, {}, {class:"form-control"}) %>
    </div>

    <div class='form-group'>
      <label>詳細</label>
      <%= f.text_area :information, class:"form-control", placeholder:"アイテムの詳細" %>
    </div>
    <div class="form-group">
      <label>写真</label>
      <%= f.file_field :image, class:"form-control" %>
    </div>
    
    <div>
      <%= f.submit "登録する", class:"register-btn" %>
    </div>
  <% end %>

</div>
    <%= render "shared/footer" %>