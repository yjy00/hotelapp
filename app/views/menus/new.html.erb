<%= render "shared/header" %>



<div class="item-registration">
  <%= form_with model: @menu, class:"", local: true do |f| %>

    <%= render 'shared/error_messages', model: f.object %>

    <div class=''>名前
      <%= f.text_area :name, class:"", placeholder:"アイテム名", maxlength:"40" %>
    </div>
    <div class="count">カテゴリー
    <%= f.collection_select(:category_id, Category.all, :id, :name, {}, {class:""}) %>
    </div>

    <div class=''>詳細
      <%= f.text_area :information, class:"", placeholder:"アイテムの詳細" %>
    </div>
    <div class="">写真</div>
    <div class=''>
      <%= f.file_field :image, class:"" %>
    </div>
    
    <div>
      <%= f.submit "登録する", class:"register-btn" %>
    </div>
  <% end %>

</div>