<%= render "shared/header" %>
<div class="container">
<div class="regular-guest-container-inner">
    <%= form_with model: @regular_guest, class:"guest-form", local: true do |f| %>

    <p class="guest-form-title">新規ゲスト登録</p>

      <%= render 'shared/error_messages', model: f.object %>

      <div class="form-group">
        <label>ゲストの名前</label>
        <%= f.text_area :name, class:"form-control form-control-sm",placeholder:'ゲストの名前' %>
      </div>
      <div class='form-group'>
        <label class="guest-form-status-title">ステータス</label>
        <%= f.collection_select(:status_id, Status.all, :id, :name, {}, {class:"form-control"}) %>
      </div>
      <div class='form-group'>
        <label>メンバーナンバー</label>
        <%= f.text_area :member_number, class:"form-control form-control", placeholder:"メンバーナンバー" %>
      </div>
      <div class='form-group'>
        <label>その他の情報</label>
        <%= f.text_area :information, class:"form-control form-control-lg", placeholder:"ゲストに関する情報" %>
      </div>

          <%= f.submit "登録", class:"btn btn-block" %>

    <% end %>
    </div>
    </div>

    <%= render "shared/footer" %>
