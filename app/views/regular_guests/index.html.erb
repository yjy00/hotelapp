<%= render "shared/header" %>

<div class="container">
<h4 class="guest-title">常連ゲスト様一覧</h4>
<table class="table table-striped table-bordered">

<tr>
  <th>ゲストのお名前</th>
  <th>会員ステータス</th>
  <th>会員番号</th>
</tr>

  <% @regular_guests.each do |regular_guest| %>
        <ul class="guest-list">
          <li class='guest'>
<tr>

              <%= link_to edit_regular_guest_path(regular_guest), class:'guest-to-edit' do %>

               <td>
                 <%= regular_guest.name %>
               </td>
                 
                <td>
                  <%= regular_guest.status.name %>
                </td>

                <td>
                  <%= regular_guest.member_number %>
                </td>

            <% end %>
      </tr>
          </li>
        </ul>
      <% end %>
</table>
  <p class="guest-btn-pagenate-wrapper">ページネート</p>
    <%= link_to '新規ゲスト登録', new_regular_guest_path, class: "btn" %>
    
    </div>
